{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
	<div class="main-wrapper account-wrapper">
        <div class="account-page">
			<div class="account-center">
				<div class="account-box">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey | trans(error.messagedata, 'security') }}
                            </div>
                        {% endif %}

                        <form method="post">
                            <div class="form-group">
                                <label for="username">Email</label>
                                <input type="text" class="form-control" placeholder="email" name="_username" id="username" value="{{ last_username }}"/>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" placeholder="password" name="_password" id="password"/>
                            </div>
							<div class="checkbox mb-3">
								<label>
									<input type="checkbox" value="remember-me"> Remember me
								</label>
							</div>
                            <div class="form-group text-center">
                            	<button type="submit" class="btn btn-primary account-btn">Login</button>
                        	</div>

							<div class="text-center register-link">
                            	Donâ€™t have an account? <a href="{{ path('app_registration') }}">Register Now</a>
                        	</div>
                        </form>
					</div>
			</div>
        </div>
    </div>
{% endblock %}